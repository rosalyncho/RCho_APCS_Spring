package textExcel;

public class ValueCell extends RealCell {
	
	private double decimal;
	public ValueCell(String value) {
		super(value);
		decimal=Double.parseDouble(value);
	}
	public String fullCellText(){
		return getCellText();
	}
	public String abbreviatedCellText(){
		String num = getCellText();
		int dot=periodLoc();
		if (dot==-1)
			num= num+".0";
		int i=getCellText().length()-1;
		if(decimal!=0){
			while(num.substring(i, i+1).equals("0")&&dot>=0){
				num=num.substring(0, i);
				i--;
			}
			if(num.substring(num.length()-1).equals("."))
				num=num+"0";
		}
		if(num.length()>10){
				return num.substring(0, 10);
		}	
		else
			return String.format("%-10s", num.substring(0));
	}
	public double getDoubleValue(){
		if(getCellText().substring(0, 1).equals("-"))
			return decimal*-1.0;
		return decimal;
	}
	public int periodLoc(){
		for(int i=0;i<getCellText().length();i++){
			if(getCellText().substring(i, i+1).equals("."))
				return i;
		}
		return -1;
	}
}
