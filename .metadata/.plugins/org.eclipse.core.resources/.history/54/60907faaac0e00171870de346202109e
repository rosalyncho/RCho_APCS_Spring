package textExcel;

public class PercentCell extends RealCell{

	public PercentCell(String enter){
		super(enter);
	}
	public double getDoubleValue(){

		String ball=getCellText();
		ball=ball.substring(0,ball.length()-1);
		double kkkkkk=Double.parseDouble(ball);
		return kkkkkk/100;
	}
	public String abbreviatedCellText(){
		String percent=getCellText();
		if(percent.contains(".")){
			int decimalIndex = percent.indexOf(".");
			percent = percent.substring(0, decimalIndex);			
		}
		if(percent.length() > 10){
			return percent.substring(0, 10);
		}else{
			int difference = 10 - percent.length();
			percent += "%";
			for(int k = 0; k < difference; k++){
				percent += " ";
			}
			return percent.substring(0,percent.length() -1);
		}
		
		
		
	}
	public String fullCellText(){
		return ""+getDoubleValue();
		
	}
}
