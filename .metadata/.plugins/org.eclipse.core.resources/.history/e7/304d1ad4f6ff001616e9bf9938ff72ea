package textExcel;

// Update this file with your own code.

public class Spreadsheet implements Grid
{
	private int row;
	private int column;
	
	
		Cell[][] excelSpreadsheet = new EmptyCell[12][20];
	
	@Override
	public String processCommand(String command)
	{
		// TODO Auto-generated method stub
		return command;
	}

	@Override
	public int getRows()
	{
		// TODO Auto-generated method stub
		row = 20;
		return row;
	}

	@Override
	public int getCols()
	{
		// TODO Auto-generated method stub
		column = 12;
		return column;
	}

	@Override
	public Cell getCell(Location loc)
	{
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public String getGridText()
	{
		// TODO Auto-generated method stub
		String grid="   |A         |B         |C         |D         |E         |F         |G         |H         |I         |J         |K         |L         |"+"\n";
				for (int i=0;i<20;i++){
					if(i<9)
						grid=grid+"  "+(i+1);
					else
						grid=grid+" "+(i+1);
					for (int j=0;j<12;j++){
						grid=grid+"|"+ excelSpreadsheet[i][j].abbreviatedCellText();
					}
					grid=grid+"\n";
		
				}return grid;
	}
}
